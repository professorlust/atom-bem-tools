{
  "name": "bem-tools",
  "main": "./lib/bem-tools",
  "version": "0.1.15",
  "description": "Create BEM HTML, CSS and JSON faster",
  "keywords": [
    "bem",
    "bemjson",
    "html",
    "css",
    "sass",
    "scss"
  ],
  "activationCommands": {
    "atom-workspace": [
      "bem-tools:run",
      "bem-tools:to-json",
      "bem-tools:to-css",
      "bem-tools:to-scss"
    ]
  },
  "configSchema": {
    "modPrefix": {
      "title": "Mod prefix",
      "description": "Usually it is -- or _",
      "type": "string",
      "default": "--",
      "order": 1
    },
    "scssTabs": {
      "title": "Tab size for SCSS nested classes",
      "description": "Default value is two spaces. You can use `\\t` for tabs.",
      "type": "string",
      "default": "  ",
      "order": 2
    }
  },
  "repository": "https://github.com/pvoznyuk/atom-bem-tools",
  "license": "MIT",
  "engines": {
    "atom": ">=1.0.0 <2.0.0"
  },
  "dependencies": {
    "bem-json-to-html": "^0.3.1",
    "bemjson-to-scss": "^0.1.4",
    "html2bemjson": "^1.10.0",
    "prettify-html": "0.0.2"
  }
}
